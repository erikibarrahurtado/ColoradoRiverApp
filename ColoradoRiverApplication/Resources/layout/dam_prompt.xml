<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/ic_launcher_background">
	<TextView
		android:id="@+id/damAnswerTitleTextViewId"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#2bab2b"
		android:textSize="90dp"
		android:text="Over 4 Million!"
		android:gravity="center_horizontal"
		android:textColor="@android:color/white"/>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@android:drawable/dialog_holo_light_frame"
		android:backgroundTint="#a1e6c5"
		>
		<LinearLayout
			android:layout_weight="1"
			android:orientation="vertical"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:gravity="center_vertical"
			android:background="@android:drawable/dialog_holo_light_frame"
			android:backgroundTint="#ddf6ea">
			<TextView
				android:layout_weight=".8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
				android:text="Did You know?"
				android:textSize="55dp"
				android:gravity="center_horizontal"
				android:textColor="@android:color/black"/>

			<TextView
				android:id="@+id/damAnswerDescriptionTextView"
				android:layout_weight=".2"
				android:text="Desc"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:textSize="44dp"
				android:editable="false"
				android:paddingLeft="20dp"
				android:paddingRight="10dp"/>
			
			<Button
				android:id="@+id/goBackButton"
				android:text="Go Back"
				android:backgroundTint="#e599b2"
				android:textColor="@android:color/white"
				android:layout_width="200dp"
				android:layout_height="match_parent"
				android:background="@drawable/circlebutton"
				android:textSize="30dp"
				android:layout_weight=".8"/>
		</LinearLayout>
		<LinearLayout
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:backgroundTint="#faf9df" 
			android:background="@android:drawable/dialog_holo_light_frame"
			android:paddingLeft="25dp"
			android:paddingRight="25dp"
			>
			<ImageView
				android:layout_weight="0.2"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/damAnswerImageView"
				android:paddingTop="20dp"/>
			<TextView
				android:layout_weight="0.8"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="Wahweap Marina on Lake Power"
				android:gravity="center_horizontal"
				android:paddingTop="10dp"
				android:textSize="20dp"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
