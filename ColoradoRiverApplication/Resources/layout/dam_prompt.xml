<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
	android:background="@color/ic_launcher_background"
    >
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/HorizontalGuideline1"
		app:layout_constraintGuide_percent="0.15"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/twentyThreeHorizontalGuideline"
		app:layout_constraintGuide_percent="0.23"
		android:orientation="horizontal"
	/>
			<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/eightyFiveHorizontalGuideline"
		app:layout_constraintGuide_percent="0.85"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/eightPercentVerticalGuideLine"
		app:layout_constraintGuide_percent="0.08"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/ThreeVerticalGuideLine"
		app:layout_constraintGuide_percent="0.03"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/ninetySevenVerticalGuideLine"
		app:layout_constraintGuide_percent="0.97"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/CenterVerticalGuideLine"
		app:layout_constraintGuide_percent="0.5"
		android:orientation="vertical"
	/>
    <TextView
		android:id="@+id/damAnswerTitleTextViewId"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@+id/ThreeVerticalGuideLine"
		app:layout_constraintEnd_toEndOf="@+id/ninetySevenVerticalGuideLine"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/HorizontalGuideline1"
		android:background="@drawable/rectangle"
		android:textSize="80dp"
		android:text="Title"
		android:gravity="center"
		android:textColor="@android:color/white"
		android:textStyle="bold"
		/>

	<TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="@+id/CenterVerticalGuideLine"
		app:layout_constraintTop_toTopOf="@id/HorizontalGuideline1"
		app:layout_constraintBottom_toBottomOf="@+id/twentyThreeHorizontalGuideline"
		android:text="Did You know?"
		android:textSize="50dp"
		android:textStyle="bold"
		android:gravity="center"
		android:backgroundTint="#ddf6ea"
		android:background="@android:drawable/dialog_holo_light_frame"
		android:layout_marginLeft="70dp"
		android:textColor="@android:color/black"
		/>
	<TextView
		android:id="@+id/damAnswerDescriptionTextView"
		android:text="Desc"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="@+id/CenterVerticalGuideLine"
		app:layout_constraintTop_toTopOf="@+id/twentyThreeHorizontalGuideline"
		app:layout_constraintBottom_toBottomOf="@id/eightyFiveHorizontalGuideline"
		android:textSize="41dp"
		android:editable="false"
		android:paddingLeft="20dp"
		android:paddingRight="10dp"
		android:background="@android:drawable/dialog_holo_light_frame"
		android:backgroundTint="#ddf6ea"
		android:layout_marginLeft="70dp"
		android:textColor="@android:color/black"
		/>

	<Button
		android:id="@+id/goBackButton"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@drawable/backbuttonimage"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="@id/eightPercentVerticalGuideLine"
		app:layout_constraintBottom_toBottomOf="parent"
		/>
	<ImageView
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:id="@+id/damAnswerImageView"
		app:layout_constraintStart_toStartOf="@+id/CenterVerticalGuideLine"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@+id/HorizontalGuideline1"
		app:layout_constraintBottom_toBottomOf="@id/eightyFiveHorizontalGuideline"
		app:layout_constraintDimensionRatio="1:1"

	/>

</androidx.constraintlayout.widget.ConstraintLayout>