<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
	android:background="#ddf7ea"
    >
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/HorizontalGuideline1"
		app:layout_constraintGuide_percent="0.15"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/HorizontalGuideline2"
		app:layout_constraintGuide_percent="0.70"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/NinetyHorizontalGuideline"
		app:layout_constraintGuide_percent="0.9"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/CenterVerticalGuideLine"
		app:layout_constraintGuide_percent="0.5"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/eightPercentVerticalGuideLine"
		app:layout_constraintGuide_percent="0.08"
		android:orientation="vertical"
	/>
			<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/sixtyPercentVerticalGuideLine"
		app:layout_constraintGuide_percent="0.60"
		android:orientation="vertical"
	/>
		<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/fiftyFivePercentVerticalGuideLine"
		app:layout_constraintGuide_percent="0.55"
		android:orientation="vertical"
	/>

    <TextView
		android:id="@+id/damNameTextView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/HorizontalGuideline1"
		android:background="#2bab2b"
		android:textSize="80dp"
		android:text="Title"
		android:gravity="center"
		android:textColor="@android:color/white"
		/>

	<ImageView
			android:id="@+id/damImageView"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_gravity="center"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="@+id/CenterVerticalGuideLine"
			app:layout_constraintTop_toTopOf="@+id/HorizontalGuideline1"
			app:layout_constraintBottom_toBottomOf="@id/NinetyHorizontalGuideline"
			
		
		/>
	<TextView
		android:id="@+id/damDescriptionTextView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:gravity="center_vertical"
		android:text="Desc"
		android:textSize="44dp"
		android:editable="false"
		app:layout_constraintStart_toStartOf="@+id/CenterVerticalGuideLine"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/HorizontalGuideline1"
		app:layout_constraintBottom_toBottomOf="@id/HorizontalGuideline2"
		android:paddingLeft="5dp"
		/>

	<ImageButton
		android:id="@+id/goBackButton"
		android:text="Home"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_gravity="center"
		android:gravity="center"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="@id/eightPercentVerticalGuideLine"
		app:layout_constraintBottom_toBottomOf="parent"
		android:background="@drawable/backbuttonimage"
		app:layout_constraintDimensionRatio="1:1"
		/>

	<Button
		android:id="@+id/questionButton"
		android:text="How many people do you think visit Glen Canyon Recreation Area annually?"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:gravity="center"
		android:textSize="27dp"
		app:layout_constraintStart_toStartOf="@+id/fiftyFivePercentVerticalGuideLine"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/HorizontalGuideline2"
		app:layout_constraintBottom_toBottomOf="@id/NinetyHorizontalGuideline"
		android:background="@drawable/dialogbox"
		android:paddingLeft="35dp"
		android:paddingRight="35dp"
		android:paddingBottom="20dp"
	/>

	<ImageView
       android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@drawable/person"
		app:layout_constraintEnd_toEndOf="@+id/sixtyPercentVerticalGuideLine"
		app:layout_constraintTop_toTopOf="@id/NinetyHorizontalGuideline"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="1:1"
		/>
	
</androidx.constraintlayout.widget.ConstraintLayout>