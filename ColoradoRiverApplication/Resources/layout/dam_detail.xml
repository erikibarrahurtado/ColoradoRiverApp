<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
	android:background="#dfc7a7"
    >

	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/HorizontalGuideline2"
		app:layout_constraintGuide_percent="0.74"
		android:orientation="horizontal"
	/>
	
		
	<ImageView
			android:id="@+id/damImageView"
			android:layout_width="@+id/fiftyVerticalGuideLine"
			android:layout_height="match_parent"
			app:layout_constraintStart_toStartOf="parent"
		    app:layout_constraintEnd_toEndOf="@+id/fiftyVerticalGuideLine"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintDimensionRatio="5:5"

		
		/>
	 <TextView
		android:id="@+id/damNameTextView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@+id/fortySevenVerticalGuideLine"
		app:layout_constraintEnd_toEndOf="@+id/ninetySevenVerticalGuideLine"
		app:layout_constraintTop_toTopOf="@+id/sevenHorizontalGuideline"
		app:layout_constraintBottom_toBottomOf="@id/twentyHorizontalGuideline"
		android:background="@drawable/greenBackgroundRibbon"
		android:textSize="80dp"
		android:text="Title"
		android:textStyle="bold"
		android:gravity="center"
		android:textColor="@android:color/white"
		/>
		<TextView
		android:id="@+id/damDescriptionTextView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:gravity="center_vertical"
		android:text="Desc"
		android:textSize="41dp"
		android:textStyle="bold"
		android:editable="false"
		app:layout_constraintStart_toStartOf="@+id/fiftyFourVerticalGuideLine"
		app:layout_constraintEnd_toEndOf="@+id/ninetySevenVerticalGuideLine"
		app:layout_constraintTop_toTopOf="@id/twentyHorizontalGuideline"
		app:layout_constraintBottom_toBottomOf="@id/HorizontalGuideline2"
		android:textColor="@android:color/black"
		android:layout_marginLeft="15dp"
		/>

	<Button
		android:id="@+id/questionButton"
		android:text="How many people do you think visit Glen Canyon Recreation Area annually?"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:gravity="center"
		android:textSize="27dp"
		android:textStyle="italic"
		android:textColor="#286a81"
		app:layout_constraintStart_toStartOf="@+id/fiftyFourVerticalGuideLine"
		app:layout_constraintEnd_toEndOf="@+id/ninetySevenVerticalGuideLine"
		app:layout_constraintTop_toTopOf="@id/HorizontalGuideline2"
		app:layout_constraintBottom_toBottomOf="@id/NinetyTwoHorizontalGuideline"
		android:background="@drawable/questionImage"
		android:paddingLeft="140dp"
		android:paddingRight="20dp"
	/>

		<ImageButton
		android:id="@+id/goBackButton"
        android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@drawable/previousBtn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="@+id/tenVerticalGuideLine"
		app:layout_constraintTop_toTopOf="@id/NinetyHorizontalGuideline"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="4:1"
		/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/tenVerticalGuideLine"
		app:layout_constraintGuide_percent="0.10"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/fortySevenVerticalGuideLine"
		app:layout_constraintGuide_percent="0.47"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/fiftyVerticalGuideLine"
		app:layout_constraintGuide_percent="0.50"
		android:orientation="vertical"
	/><android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/fiftyFourVerticalGuideLine"
		app:layout_constraintGuide_percent="0.54"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/sixtyFourVerticalGuideLine"
		app:layout_constraintGuide_percent="0.64"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/ninetySevenVerticalGuideLine"
		app:layout_constraintGuide_percent="0.97"
		android:orientation="vertical"
	/>

	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/sevenHorizontalGuideline"
		app:layout_constraintGuide_percent="0.07"
		android:orientation="horizontal"
	/>
		<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/twentyHorizontalGuideline"
		app:layout_constraintGuide_percent="0.20"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/NinetyHorizontalGuideline"
		app:layout_constraintGuide_percent="0.9"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/NinetyTwoHorizontalGuideline"
		app:layout_constraintGuide_percent="0.92"
		android:orientation="horizontal"
	/>
</androidx.constraintlayout.widget.ConstraintLayout>