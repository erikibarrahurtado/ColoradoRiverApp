<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
	android:background="#4470a0"
    >
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/TenHorizontalGuideline"
		app:layout_constraintGuide_percent="0.10"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/eighteenHorizontalGuideline"
		app:layout_constraintGuide_percent="0.18"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/HorizontalGuideline1"
		app:layout_constraintGuide_percent="0.15"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/twentyHorizontalGuideline"
		app:layout_constraintGuide_percent="0.19"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/twentyThreeHorizontalGuideline"
		app:layout_constraintGuide_percent="0.23"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/twentyFourHorizontalGuideline"
		app:layout_constraintGuide_percent="0.24"
		android:orientation="horizontal"
	/>
			<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/eightyFiveHorizontalGuideline"
		app:layout_constraintGuide_percent="0.85"
		android:orientation="horizontal"
	/>
			<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/ninetyHorizontalGuideline"
		app:layout_constraintGuide_percent="0.90"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/eightPercentVerticalGuideLine"
		app:layout_constraintGuide_percent="0.08"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/ThreeVerticalGuideLine"
		app:layout_constraintGuide_percent="0.03"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/fortyEightVerticalGuideLine"
		app:layout_constraintGuide_percent="0.48"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/ninetyFiveVerticalGuideLine"
		app:layout_constraintGuide_percent="0.95"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/ninetySevenVerticalGuideLine"
		app:layout_constraintGuide_percent="0.97"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/CenterVerticalGuideLine"
		app:layout_constraintGuide_percent="0.5"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/seventytVerticalGuideLine"
		app:layout_constraintGuide_percent="0.70"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/fiftyEightVerticalGuideLine"
		app:layout_constraintGuide_percent="0.10"
		android:orientation="vertical"
	/>

	<ImageButton
		android:id="@+id/goBackButton"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@drawable/previousbtn"
		app:layout_constraintDimensionRatio="4:1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="@id/fiftyEightVerticalGuideLine"
		app:layout_constraintTop_toTopOf="@id/ninetyHorizontalGuideline"
		app:layout_constraintBottom_toBottomOf="parent"

		/>

		<ImageView
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:id="@+id/damAnswerImageView"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="@+id/CenterVerticalGuideLine"
		app:layout_constraintTop_toTopOf="@+id/HorizontalGuideline1"
		app:layout_constraintBottom_toBottomOf="@id/eightyFiveHorizontalGuideline"
		app:layout_constraintDimensionRatio="1:1"
		android:elevation="6dp"

	/>

	<TextView
		android:id="@+id/damAnswerTitleTextViewId"
        android:layout_width="0dp"
        android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@+id/CenterVerticalGuideLine"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/HorizontalGuideline1"
		app:layout_constraintBottom_toBottomOf="@id/twentyThreeHorizontalGuideline"
		android:text="Did You know?"
		android:textSize="65dp"
		android:textStyle="bold"
		android:gravity="center_vertical"
		android:textColor="@android:color/white"
		/>
		<ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@+id/fortyEightVerticalGuideLine"
		app:layout_constraintEnd_toEndOf="@+id/ninetyFiveVerticalGuideLine"
		app:layout_constraintTop_toTopOf="@id/twentyThreeHorizontalGuideline"
		app:layout_constraintBottom_toBottomOf="@id/twentyFourHorizontalGuideline"
		android:background="@drawable/greenLine"

	    />

	<TextView
		android:id="@+id/damAnswerDescriptionTextView"
		android:text="Desc"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="@+id/CenterVerticalGuideLine"
		app:layout_constraintEnd_toEndOf="@+id/ninetySevenVerticalGuideLine"
		app:layout_constraintTop_toTopOf="@+id/twentyFourHorizontalGuideline"
		app:layout_constraintBottom_toBottomOf="parent"
		android:textSize="41dp"
		android:editable="false"
		android:textColor="@android:color/white"
		android:paddingTop="10dp"
		/>
</androidx.constraintlayout.widget.ConstraintLayout>