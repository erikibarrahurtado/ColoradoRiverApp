<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/startBackgroundImage"
    >

	<TextView
        android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintDimensionRatio="7:1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/fourteenHorizontalGuideline"
		app:layout_constraintBottom_toBottomOf="@id/thirtySevenHorizontalGuideline"
		android:text="@string/landingPage_title"
		android:gravity="center"
		android:textSize="90dp"
		android:backgroundTint="#99000000"
		android:textColor="@android:color/white"
		/>

	<TextView
		android:id="@+id/appDescriptionTextViewId"
        android:layout_width="0dp"
        android:layout_height="0dp"
		android:text="@string/app_description"
		android:gravity="center"
		android:textColor="@android:color/white"
		app:layout_constraintDimensionRatio="9:1"
		app:layout_constraintTop_toTopOf="@id/thirtyFiveHorizontalGuideline"
		app:layout_constraintBottom_toBottomOf="@id/fiftyHorizontalGuideline"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		android:textSize="30dp"
		android:background="@drawable/descriptionStartHolderImage"
		android:padding="10dp"
		/>

	<ImageButton
        android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@drawable/startHandButton"
		android:id="@+id/letsDoThisButton"
		app:layout_constraintStart_toStartOf="@id/fortyThreeVerticalGuideline"
		app:layout_constraintEnd_toEndOf="@id/fiftySevenVerticalGuideline"
		app:layout_constraintBottom_toTopOf="@id/ninetyHorizontalGuideline"
		app:layout_constraintDimensionRatio="1:1"
		/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/fourteenHorizontalGuideline"
		app:layout_constraintGuide_percent="0.14"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/thirtyFiveHorizontalGuideline"
		app:layout_constraintGuide_percent="0.35"
		android:orientation="horizontal"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/thirtySevenHorizontalGuideline"
		app:layout_constraintGuide_percent="0.37"
		android:orientation="horizontal"
	/>
	
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/fiftyHorizontalGuideline"
		app:layout_constraintGuide_percent="0.50"
		android:orientation="horizontal"
	/>

	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/ninetyHorizontalGuideline"
		app:layout_constraintGuide_percent="0.90"
		android:orientation="horizontal"
	/>

	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/fortyThreeVerticalGuideline"
		app:layout_constraintGuide_percent="0.43"
		android:orientation="vertical"
	/>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/fiftySevenVerticalGuideline"
		app:layout_constraintGuide_percent="0.57"
		android:orientation="vertical"
	/>
</androidx.constraintlayout.widget.ConstraintLayout>